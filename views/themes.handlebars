<div class="theme-title-heading text-info text-center mb-5">
  <h1>Take Me Back To The Good Days</h1>
  <h2>OH SWEET NOSTALGIA!</h2>
</div>

<div class="theme-hero-1">
  <div class="row">

    <div class="col-md-6 col-sm-12">
      <img id="theme-img" class="rounded img-fluid" alt="..."
        src="/images/homepage-candy-box-image.png">
    </div>

    <div class="col-md-6 col-sm-12 text-center pt-lg-3 pb-lg-3">
      <div class="d-flex flex-column justify-content-evenly align-items-center mt-3">
        <h3 id="text-responsive">Starting with the 70's box!</h3>
        <p id="text-responsive">This box is filled with the best candies from the 70's</p>
        <div class="grid" id="text-responsive">
          <ul class="list-group list-group-horizontal bg-transparent align-items-center">
            <div class="list-group-item list-group-item-primary">Andes Mints</li>
              <div class="list-group-item flex-fill list-group-item-success">Appleheads</li>
                <div class="list-group-item flex-fill list-group-item-danger">Astronaut Ice Cream Sandwich</li>
                  <div class="list-group-item flex-fill list-group-item-warning">Blow Pops</li>
                    <li class="list-group-item flex-fill list-group-item-info">BuckEyes</li>
          </ul>
        </div>
        {{#if loggedIn}}
        <div class="col-12 pt-3 pb-3">
          <a class="btn btn-primary btn-lg btn-block" href="/dashboard" role="button" id="text-responsive">Get Sweet
            70s Now!</a>
        </div>
        {{else}}
        <div class="col-12 pt-3 pb-3">
          <a class="btn btn-primary btn-lg btn-block" href="/signup" role="button" id="text-responsive">Get Sweet
            70s Now!</a>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

